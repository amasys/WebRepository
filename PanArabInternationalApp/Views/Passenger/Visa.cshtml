                                            </div>
                                            <!-- /.modal-dialog -->
                                        </div>


                                        <table id="example1" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Form SL </th>
                                                    <th>Passenger Name</th>
                                                    <th>Passport No</th>
                                                    <th>Visa Category</th>
                                                    <th>Visa No</th>
