@section scripts
{

    <script type="text/javascript">

        function modal() {


        }

        //Date picker
        $('#MusaniDate').datepicker({
            autoclose: true,
            format: 'dd-MM-yyyy'
        });
        $('#OkalyeeDate').datepicker({
            autoclose: true,
            format: 'dd-MM-yyyy'
        });

        $('#issuedate').datepicker({
            autoclose: true,
            format: 'dd-MM-yyyy'
        });
        $('#stampdate').datepicker({
            autoclose: true,
            format: 'dd-MM-yyyy'
        });
        $("#example1").on('click', '#action', action);
        $('.select2').change(function () {
            var value = $(this).val();

            if (value === '0' || value === "1") {

                $('#Musane').css("display", "block");
                $('#Licence').css("display", "none");

            } else if (value === '2') {
                $('#Musane').css("display", "block");
                $('#Licence').css("display", "block");
            } else {
                $('#Musane').css("display", "none");
                $('#Licence').css("display", "none");
            }

        });

        function action() {

            $('#modal-default').modal();
            var table = $('#example1').DataTable();

            var index = $(this).closest('td').parent()[0].sectionRowIndex;
            var FormSl = table.cell(index, 0).data();
            GetCheckExistVisa(FormSl);



        };
        function ToJavaScriptDate(value) {
            var pattern = /Date\(([^)]+)\)/;
            var results = pattern.exec(value);
            var dt = new Date(parseFloat(results[1]));
            return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
        }
        function GetCheckExistVisa(pslNo) {

            $.ajax({
                type: 'POST',
                dataType: 'json',
                cache: false,
                url: "/Passenger/GetVisaInformationIfExistDate",
                data: { pid: pslNo },
                success: function(result) {

                    if (result === null) {
                        $('#FormSl').val(pslNo);
                    } else {
                        $('#FormSl').val(result.FormSl);
                        $('#VisaNo').val(result.VisaNo);


                        if (result.Cateogry==='Driver') {

                            $('#Musane').css("display", "block");
                            $('#Licence').css("display", "block");
                        } else {
                            $('#Musane').css("display", "none");
                            $('#Licence').css("display", "none");
                        }



                        $('#VisaReff').val(result.VisaReffNo);
                        $('#MusaniDate').val(ToJavaScriptDate(result.MusaniDate));
                        $('#MusaniRemarks').val(result.MusaniRemarks);
                        $('#ContractAmount').val(result.ContractAmount);
                        $('#DrivingLicenceNo').val(result.DrivingLicnc);
                        $('#OkalyeeDate').val(ToJavaScriptDate(result.OkeylaDate));
                        $('#OkelaNo').val(result.OkeylaNo);
                        $('#OkalyeeRemarks').val(result.OkeylaRemarks);
                        $('#SponcerId').val(result.SponserId);
                        $('#SponsorName').val(result.SponcerName);

                        $('#issuedate').val(ToJavaScriptDate(result.IssueDate));
                        $('#IssuePlace').val(result.IssuePlace);
                        $('#stampdate').val(ToJavaScriptDate(result.VisaStapmingDate));

                    }

                },
                error: function(textStatus, errorThrown) {
                    $('#FormSl').val(pslNo);
                }
            });



        }


        $('#example1').DataTable({
            "ordering": false
        });
        $('#example2').DataTable({
            "ordering": false
        });
    </script>

}


