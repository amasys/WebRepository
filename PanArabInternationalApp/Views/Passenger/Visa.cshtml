                                                                            <span class="input-group-addon"><i class="fa fa-reorder (alias)"></i></span>

                                                                            @Html.TextBoxFor(model => model.DrivingLicenceNo, new { @class = "form-control", placeholder = "DRIVING LICENCE NO" })

                                                                        </div>
                                                                    </div>

                                                                    <hr class="cm-hr" />
                                                                </div>
