                                                                            @Html.TextBoxFor(model => model.OkalyeeDate, new { @class = "form-control", placeholder = "OKEYLA DATE" })

                                                                        </div>

                                                                    </div>
                                                                    <div class="form-group">
                                                                        <div class="input-group">
                                                                            <span class="input-group-addon"><i class="fa fa-male"></i></span>
                                                                            @Html.TextBoxFor(model => model.OkelaNo, new { @class = "form-control", placeholder = "OKEYLA NO" })

                                                                        </div>

