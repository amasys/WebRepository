                                                                        <span class="input-group-addon"><i class="fa fa-male"></i></span>
                                                                        @Html.TextBoxFor(model => model.OkalyeeRemarks, new { @class = "form-control", placeholder = "OKEYLA REMARKS" })

                                                                    </div>
                                                                </div>



                                                            </div>

                                                            <div class="col-md-6">



                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <span class="input-group-addon"><i class="fa fa-male"></i></span>
                                                                        @Html.TextBoxFor(model => model.VisaNo, new { @class = "form-control", placeholder = "VISA NO" })

                                                                    </div>
                                                                    @Html.ValidationMessageFor(model => model.VisaNo)
                                                                </div>
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <span class="input-group-addon"><i class="fa fa-male"></i></span>
                                                                        @Html.TextBoxFor(model => model.VisaReff, new { @class = "form-control", placeholder = "VISA REFF NO" })

                                                                    </div>
                                                                    @Html.ValidationMessageFor(model => model.VisaReff)
                                                                </div>
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <span class="input-group-addon"><i class="fa fa-male"></i></span>
                                                                        @Html.TextBoxFor(model => model.SponcerId, new { @class = "form-control", placeholder = "SPONSER ID" })

                                                                    </div>
                                                                    @Html.ValidationMessageFor(model => model.SponcerId)
                                                                </div>
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <span class="input-group-addon"><i class="fa fa-male"></i></span>
                                                                        @Html.TextBoxFor(model => model.SponsorName, new { @class = "form-control", placeholder = "SPONSER NAME" })

                                                                    </div>
                                                                    @Html.ValidationMessageFor(model => model.SponsorName)
                                                                </div>
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <span class="input-group-addon"><i class="fa fa-male"></i></span>
                                                                        @Html.TextBoxFor(model => model.IssueDate, new { @id = "issuedate", @class = "form-control", placeholder = "Issue Date" })

                                                                    </div>
                                                                    @Html.ValidationMessageFor(model => model.IssueDate)
                                                                </div>


                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <span class="input-group-addon"><i class="fa fa-male"></i></span>
                                                                        @Html.TextBoxFor(model => model.IssuePlace, new { @class = "form-control", placeholder = "Issue Place" })

