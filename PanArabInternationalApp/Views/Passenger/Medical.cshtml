@section scripts
{
    <script type="text/javascript">

        $('.date').datepicker({
            autoclose: true
        });

        $("#example1").on('click', '.toggle', fitUnFit);

        function fitUnFit() {
            var table = $('#example1').DataTable();

            var index = $(this).closest('td').parent()[0].sectionRowIndex;

            var MedicalReport = table.cell(index, 4).nodes().to$().find('input').prop('checked');
            if (MedicalReport === true) {
               // MedicalReport = "FIT";
                table.cell(index, 5).nodes().to$().find('input').attr('readonly', false);
            } else {
             
                table.cell(index, 5).nodes().to$().find('input').attr('readonly', true);
            }

           
        }


        $("#example1").on('click', '#action', action);
        $("#example2").on('click', '#action', function() {

            alert('Edit');
        });


        function action() {
            var table = $('#example1').DataTable();

            var index = $(this).closest('td').parent()[0].sectionRowIndex;

            //var data = table.row(index).data();


            var FormSl = table.cell(index, 0).data();
            var PName = table.cell(index, 1).data();
            var PassNo = table.cell(index, 2).data();
            var MedicalDate = table.cell(index, 3).nodes().to$().find('input').val();
            var MedicalReport = table.cell(index, 4).nodes().to$().find('input').prop('checked');
            if (MedicalReport === true) {
                MedicalReport = "FIT";
            } else {
                MedicalReport = "UN-FIT";
            }
            var MedicalContactAmount = table.cell(index, 5).nodes().to$().find('input').val();
            var remarks = table.cell(index, 6).nodes().to$().find('textarea').val();
            var MedicalExpDate = table.cell(index, 7).nodes().to$().find('input').val();


            var value = {
                Formsl: FormSl,
                PName: PName,
                PassNo: PassNo,
                MedicalDate: MedicalDate,
                MedicalReport: MedicalReport,
                Remarks: remarks,
                MedicalExpDate: MedicalExpDate,
                MedicalContactAmount: MedicalContactAmount
            }

            if (value.MedicalDate === '') {
                alert('Please Select Medical Date');
                return;
            }

            if (value.Remarks === '') {
                alert('Please Medical Remarks');
                return;
            }

            if (value.MedicalExpDate === '') {
                alert('Please Select Medical Exp.Date');
                return;
            }


            $.ajax({
                type: "POST",
                url: '/Passenger/Medical',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(value),
                success: function (data) {

                    alert(data);

                    var url = '@Url.Action("Medical", "Passenger")';
                    window.location.href = url;
                }
            });








            //var data = table.row(index).data();
            // var data1 = $(this).find("td:eq(5) input[type='text']").val();
            //var remarks = data[3];

            // var remarks=   data[4].find('input');





        }

        //$('#example1 tbody').on('click', 'tr', function () {


        //    //alert('You clicked on ' + data[0] + '\'s row');
        //});
        $('#example1').DataTable({
            responsive: true,
            "scrollX": true
        });
        $('#example2').DataTable({
            responsive: true,
            "scrollX": true
        });
    </script>
}